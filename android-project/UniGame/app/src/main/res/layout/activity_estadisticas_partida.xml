<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_main_horizontal"
    tools:context=".app.presentacion.controlador.impl.EstadisticasPartida">

    <RelativeLayout
        style="@style/rl_main_left">
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_central">
        <LinearLayout
            style="@style/ll_main_central_vertical">
            <RelativeLayout
                style="@style/rl_main_top">
            </RelativeLayout>
            <ImageView
                android:id="@+id/imageView"
                style="@style/img_main_logo"/>
            <LinearLayout
                style="@style/ll_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/ll_secundary_title"
                    >


                    <TextView android:id="@+id/txt_nota"
                        style="@style/txt_valorEstadisticaNota"
                        android:layout_weight="0.3"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/ll_main_container">


                <TableLayout

                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="0.1" >

                    <TableRow android:gravity="center" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:text = "Estadisticas"
                        style="@style/txt_nombreEstadisticaNota"
                        />
                    </TableRow>
                    <TableRow><TextView /></TableRow>
                    <TableRow android:gravity="center" >
                        <TextView
                            android:text="NÃºmero de preguntas: "
                            style="@style/txt_nombreEstadistica"
                            />

                        <TextView
                            android:id="@+id/txtNumPreguntas"
                            style="@style/txt_valorEstadistica"
                            />

                    </TableRow>

                    <TableRow android:gravity="center" >
                        <TextView
                            android:text="Preguntas correctas: "
                            style="@style/txt_nombreEstadistica"
                            />
                        <TextView android:id="@+id/txt_numCorrectas"
                            style="@style/txt_valorEstadistica"
                           />
                    </TableRow>

                    <TableRow android:gravity="center" >
                        <TextView
                            android:text="Preguntas incorrectas: "
                            style="@style/txt_nombreEstadistica"
                            />
                        <TextView android:id="@+id/txt_numIncorrectas"
                            style="@style/txt_valorEstadistica"
                            />
                    </TableRow>

                    </TableLayout>

                <Button
                    android:id="@+id/btn_finPartida"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:layout_weight="0.1"
                    android:background="@drawable/button_design"
                    android:clickable="true"
                    android:textSize="20dp"
                    android:text="@string/end"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay" />


            </LinearLayout>
            <RelativeLayout
                style="@style/rl_main_bottom">
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_right">
    </RelativeLayout>
</LinearLayout>
