<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_main_horizontal"
    tools:context=".app.presentacion.controlador.impl.EliminarDB">

    <RelativeLayout
        style="@style/rl_main_left">
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_central">
        <LinearLayout
            style="@style/ll_main_central_vertical">
            <RelativeLayout
                style="@style/rl_main_top">
            </RelativeLayout>
            <LinearLayout
                style="@style/ll_title">
                <TextView
                    android:id="@+id/txt_title1"
                    style="@style/txt_title"
                    android:text="Borrar Bolsas Preguntas"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/ll_main_container">

                <ListView
                    style="@style/lv_default"
                    android:id="@+id/lv_bases_datos">
                </ListView>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background= "@drawable/button_design"
                android:gravity="center"
                android:paddingRight="5dip"
                android:paddingLeft="5dip"
                android:paddingBottom="9dip"
                android:layout_marginTop="10dp"
                android:onClick="eliminar_BD"
                android:paddingTop="9dip"
                android:text="Eliminar Bolsas"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_lista" />
            <RelativeLayout
                style="@style/rl_main_bottom">
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_right">
    </RelativeLayout>
</LinearLayout>
