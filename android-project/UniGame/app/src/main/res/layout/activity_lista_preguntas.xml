<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_main_horizontal"
    tools:context=".app.presentacion.controlador.impl.CrearDB">

    <RelativeLayout
        style="@style/rl_main_left">
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_central">
        <LinearLayout
            style="@style/ll_main_central_vertical">
            <RelativeLayout
                style="@style/rl_main_top">
            </RelativeLayout>
            <ImageView
                android:id="@+id/imageView"
                style="@style/img_main_logo"/>
            <LinearLayout
                android:orientation="vertical"
                style="@style/ll_main_container">
                <TextView
                    android:id="@+id/txt_name_db"
                    android:textColor="@color/Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"/>
                <Button
                    android:id="@+id/btn_individual_mode"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:text="@string/btn_individual_mode"
                    android:background="@drawable/button_design"
                    android:layout_weight="0.2"/>
                <ListView xmlns:tools="http://schemas.android.com/tools"
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:id="@+id/lv_preguntas"
                    android:background="@android:color/transparent"
                    android:cacheColorHint="@android:color/transparent"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none">
                </ListView>

            </LinearLayout>
            <RelativeLayout
                style="@style/rl_main_bottom">
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_right">
    </RelativeLayout>
</LinearLayout>
