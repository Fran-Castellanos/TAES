<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_main_horizontal"
    tools:context=".app.presentacion.controlador.impl.ListaPreguntas">

    <RelativeLayout
        style="@style/rl_main_left">
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_central">
        <LinearLayout
            style="@style/ll_main_central_vertical">
            <RelativeLayout
                style="@style/rl_main_top">
            </RelativeLayout>
            <ImageView
                android:id="@+id/imageView"
                style="@style/img_main_logo"/>
            <LinearLayout
                android:orientation="vertical"
                style="@style/ll_main_container">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar"
                    android:onClick="Confirmar_Cambios"
                    android:id="@+id/confirmarbutton" />

                <Button
                    android:id="@+id/btn_crear_pregunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/lv_default_dessign"
                    android:gravity="center_horizontal"
                    android:padding="5dip"
                    android:paddingBottom="@dimen/margin_topbot_list_item"
                    android:paddingTop="@dimen/margin_topbot_list_item"
                    android:text="AÃ±adir Pregunta"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_lista" />

                <TextView
                    android:id="@+id/txt_title1"
                    android:textColor="@color/Black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <ListView
                    android:layout_weight="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:id="@+id/lv_preguntas"
                    style="@style/lv_default">
                </ListView>

            </LinearLayout>
            <RelativeLayout
                style="@style/rl_main_bottom">
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_right">
    </RelativeLayout>
</LinearLayout>
