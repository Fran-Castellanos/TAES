<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ll_main_horizontal"
    tools:context=".app.presentacion.controlador.impl.MainActivity">

    <RelativeLayout
        style="@style/rl_main_left">
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_central">
        <LinearLayout
            style="@style/ll_main_central_vertical">
            <RelativeLayout
                style="@style/rl_main_top">
            </RelativeLayout>
            <ImageView
                android:id="@+id/imageView"
                style="@style/img_main_logo"/>
            <LinearLayout
                android:orientation="vertical"
                style="@style/ll_main_container">

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:layout_weight="0.2"
                    android:background="@drawable/button_design"
                    android:clickable="true"
                    android:text="@string/btn_login"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay" />

                <Button
                    android:id="@+id/individual_mode"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:layout_weight="0.2"
                    android:background="@drawable/button_design"
                    android:clickable="true"
                    android:text="@string/individual_mode"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay" />

                <Button
                    android:id="@+id/tournament_mode"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:layout_weight="0.2"
                    android:background="@drawable/button_design"
                    android:clickable="true"
                    android:text="@string/tournament_mode"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay" />

                <Button
                    android:id="@+id/download_questions"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:layout_weight="0.2"
                    android:background="@drawable/button_design"
                    android:clickable="true"
                    android:text="@string/download_questions"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay" />

                <Button
                    android:id="@+id/use_questions"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_gravity="center"
                    android:layout_margin="5dip"
                    android:layout_weight="0.2"
                    android:background="@drawable/button_design"
                    android:clickable="true"
                    android:text="@string/use_questions"
                    android:textStyle="bold"
                    android:textColor="@color/black_overlay" />
            </LinearLayout>
            <RelativeLayout
                style="@style/rl_main_bottom">
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        style="@style/rl_main_right">
    </RelativeLayout>
</LinearLayout>
